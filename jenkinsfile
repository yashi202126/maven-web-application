pipeline{
    agent any
    
 tools {
  maven 'MAVEN'
  
}
    stages {
        stage('git-checkout') {
            steps {
         git credentialsId: 'github', url: 'https://github.com/kuber416/maven-web-application.git'
            } 
            
        }
     stage ('maven-build') {
            steps {
                sh "mvn clean package"
             }
        }
    stage ('docker-build'){
           steps {
               sh "docker build -t kuber416/maven-web-application:1 ."
           } 
        } 
    stage("Docker Login"){
       withCredentials([string(credentialsId: 'DOCKER_HUB_PASSWORD', variable: 'DOCKER_HUB_PASSWORD')]) {
            sh 'docker login -u kuber416 -p $DOCKER_HUB_PASSWORD'
       }
    }
    stage('docker push to dokcer hub'){
            steps {
             sh "docker push kuber416/maven-web-application:1"
            }
        }


   stage('depoly as container'){
            steps {
                sh "docker run -d --name demousecases -p 9090:8080 kuber416/maven-web-application:1"
         }
       }
     }
   }



